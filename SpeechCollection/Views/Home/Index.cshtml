@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(135deg, #2b2d42, #8d99ae);
        color: #edf2f4;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
    }
    h1 {
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 0 0 10px #8d99ae, 0 0 20px #edf2f4;
    }
    p {
        margin-bottom: 2rem;
        font-size: 1.2rem;
    }
    .btn {
        font-size: 1.2rem;
        font-weight: bold;
        padding: 1rem 2rem;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        color: #edf2f4;
        transition: all 0.3s ease;
    }
    .btn-primary {
        background: #ef233c;
    }
    .btn-primary:hover {
        background: #d90429;
        transform: translateY(-3px);
    }
    .mb-3 {
        margin-bottom: 1rem;
    }
</style>

<div>
    <h1 class="display-4">Darija Speech Collection</h1>
    <p>Get started with:</p>
    <a class="btn btn-primary mb-3" href="http://localhost:5299/ConsentForm">Record a speech audio</a><br>
    <a class="btn btn-primary mb-3" href="http://localhost:5299/ConsentForm">Upload an audio file</a>
</div>
